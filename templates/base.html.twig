<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

<body>

    <nav>
        <ul>
            <li{% if app.request.attributes.get('_route')=='home' %} class="active" {% endif %}>
                <a href="{{ path('home') }}">Home</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='about' %} class="active" {% endif %}>
                <a href="{{ path('about') }}">About</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='report' %} class="active" {% endif %}>
                <a href="{{ path('report') }}">Report</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='lucky' %} class="active" {% endif %}>
                <a href="{{ path('lucky') }}">Lucky</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='api' %} class="active" {% endif %}>
                <a href="{{ path('api') }}">Api</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='session' %} class="active" {% endif %}>
                <a href="{{ path('session') }}">Session</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='card' %} class="active" {% endif %}>
                <a href="{{ path('card') }}">Card</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='game' %} class="active" {% endif %}>
                <a href="{{ path('game') }}">Game</a>
            </li>
            <li{% if app.request.attributes.get('_route')=='library' %} class="active" {% endif %}>
                <a href="{{ path('library') }}">Library</a>
            </li>
        </ul>
    </nav>

    <header>
        <img src="{{ asset('img/background.jpg') }}" alt="background">
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <p>Course MVC 2024</p>
    </footer>

</body>

</html>