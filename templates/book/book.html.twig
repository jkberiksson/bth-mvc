{% extends "base.html.twig" %}

{% block title %}Book{% endblock %}

{% block body %}
<div class="book">
    <a href="{{ path('library') }}">Go back</a>
    <h1>{{ book.title }}</h1>
    <p>Author: {{ book.author }}</p>
    <p>ISBN: {{ book.isbn }}</p>
    <img class="book-img" src="{{ book.image }}" alt="{{ book.title }}">
</div>

{% endblock %}
